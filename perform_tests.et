#!./buildfiles/et

import vec;
import str;
import fs;
import os;

files = fs.dir_entries( "tests", fs.ent.RECURSE );

p = 0;
f = 0;

sz = files.len();
for i = 0; i < sz; i += 1 {
	cprint( '{c}performing test{0}: {y}', files[ i ], '{0} ... ' );
	if os.exec( __prog__ + ' ' + files[ i ] + ' test 1>/dev/null 2>&1' ) == 0 {
		cprintln( '{g}passed{0}' );
		p += 1;
	} else {
		cprintln( '{r}failed{0}' );
		f += 1;
	}
}

cprintln( '{y}Passed{0}: {g}', p, '{0}, {y}Failed{0}: {r}', f, '{0}' );
